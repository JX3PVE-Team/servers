{{import "default/app/header_m"}}
<link rel="stylesheet" href="http://app.jx3pve.com/css/servers_m.css" type="text/css"/>

<div class="app-header">
	<h1 class="m-title">开服监控与记录</h1>
	<a class="m-help" href="javascript:void(0)"><i></i>帮助指南</a>
</div>

<div class="app-container">

	<!-- A.首屏,选择或搜索 -->
	<div class="app-content" style="display:none">
		<div class="m-filter">
			<select name="" id="">
				<option value="">请选择大区</option>
			</select>
			<select name="" id="">
				<option value="">请选择服务器</option>
			</select>
		</div>
		<p class="m-or">或</p>
		<div class="m-search">
			<form class="search" action="">
                <input type="text" placeholder="输入服务器名称快速查找">
                <button type="submit">搜索</button>
            </form>
		</div>
		<a class="u-btn-go" href="javascript:void(0)">点击查询</a>
		<p class="m-ac"><i></i><!--{block/1774}--></p>
	</div>

	<!-- B.搜索后结果 或 登录后点击中央按钮我的 -->
	<div class="app-content">
		<div class="m-result">
			<div class="m-info">
				电信一区 > 长安城
				<span class="status status-1">
					畅通
				</span>
			</div>
			<div class="m-info">
				最新开服记录
				<span class="recent">
					2015/08/08 12:00<em>（本周一）</em>
				</span>
			</div>
			<div class="m-info">
				最新开服记录
				<span class="history">
					2015/08/08 12:00<em>（上周四）</em>
				</span>
			</div>
			<div class="m-panel">
				<ul>
					<!-- 已结操作后同时还要给li添加.has -->
					<li class="has top"><i class="u-icon-top istop"></i><b>取消置顶</b></li>
                    <li class="fav"><i class="u-icon-fav"></i><b>收藏</b></li>
                    <!-- <li class="feed"><i class="u-icon-feed"></i><b>订阅</b></li> -->
				</ul>
			</div>
		</div>
		<a class="u-btn-go" href="javascript:void(0)">返回查找</a>
	</div>


</div>
{{import "default/app/footer_m"}}